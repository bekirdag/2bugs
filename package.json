{
  "name": "modern-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.app.json && tsc -p tsconfig.node.json",
    "test:legacy": "cross-env TSX_TSCONFIG_PATHS=true tsx --tsconfig tsconfig.app.json tests/legacyRoundtrip.test.ts",
    "test:movement": "cross-env TSX_TSCONFIG_PATHS=true tsx --tsconfig tsconfig.app.json tests/movementSystem.test.ts",
    "test:reproduction": "cross-env TSX_TSCONFIG_PATHS=true tsx --tsconfig tsconfig.app.json tests/reproductionSystem.test.ts",
    "test:persistence": "cross-env TSX_TSCONFIG_PATHS=true tsx --tsconfig tsconfig.app.json tests/persistence.test.ts",
    "test": "npm run test:legacy && npm run test:movement && npm run test:reproduction && npm run test:persistence"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tsconfig/svelte": "^5.0.5",
    "@types/node": "^24.10.0",
    "cross-env": "^7.0.3",
    "playwright": "^1.48.2",
    "svelte": "^5.43.5",
    "svelte-check": "^4.3.3",
    "tsx": "^4.19.1",
    "typescript": "~5.9.3",
    "vite": "^7.2.2"
  },
  "dependencies": {
    "bitecs": "^0.3.40",
    "php-serialize": "^5.1.3",
    "pixi.js": "^8.14.2"
  }
}
